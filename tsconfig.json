{
  // This file is not used in compilation. It is here just for a nice editor experience.
  "extends": "@docusaurus/tsconfig",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "strict": false, // Disabled - more lenient type checking
    "noImplicitAny": false, // Allow implicit 'any' types
    "strictNullChecks": false, // Allow null and undefined to be assigned to any type
    "strictFunctionTypes": false, // More lenient function type checking
    "strictBindCallApply": false, // More lenient bind/call/apply checking
    "strictPropertyInitialization": false, // Allow uninitialized class properties
    "noImplicitThis": false, // Allow implicit 'this' with 'any' type
    "alwaysStrict": false, // Don't enforce strict mode parsing
    "skipLibCheck": true, // Skip type checking of declaration files for faster compilation
    "types": ["cypress", "node"]
  }
}
